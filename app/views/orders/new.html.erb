<div id="particles-js"></div>
<div class="banner orders-new-banner">
  <div class="banner-card">
    <h1 class="orders-title">주문하기</h1>
    <%= form_for @order do |f| %>
      <div class="orders-ques-div">
        <span class="ques-title">기간 선택 | </span>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <%= f.radio_button :length, 1, class: "form-check-input" %> 무제한
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <%= f.radio_button :length, 2, class: "form-check-input" %> 1달
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label" >
            <%= f.radio_button :length, 3, class: "form-check-input" %> 3달
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label" >
            <%= f.radio_button :length, 4, class: "form-check-input"%> 6달
          </label>
        </div>
      </div>
      <div class="orders-ques-div">
        <span class="ques-title">사이트 선택 | </span>
        <div class="form-check form-check-inline">
          <label class="form-check-label" >
            <%= f.check_box :navercafe, class: "form-check-input" %> 네이버 카페
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label" >
            <%= f.check_box :dcinside, class: "form-check-input" %> 디씨인사이드
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label" >
            <%= f.check_box :twitter, class: "form-check-input" %> 트위터
          </label>
        </div>
      </div>
      <div class="form-group row orders-ques-div">
        <label class="col-sm-2 col-form-label">키워드 | </label>
        <div class="col-sm-10">
          <%= f.text_field :keyword, rows: 1, class: "form-control custom-input"%>
        </div>
      </div>
      <div class="form-group ques-submit-div">
        <%= f.submit ("주문 신청"), class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
<%= javascript_include_tag("particles.min.js") %>
<%= javascript_include_tag("index.js") %>
